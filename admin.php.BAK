// 1. Memulai sesi dan memeriksa login admin
include 'init.php';
if (!isset($_SESSION['admin_username'])) {
    header("Location: login.php");
    exit();
}

// 2. Menghubungkan ke database
include 'database.php';

$pesan_notifikasi = ''; // Variabel untuk menyimpan pesan notifikasi

// ===================================================================
// BAGIAN INI BERTUGAS MENANGANI AKSI (DELETE & UPDATE)
// ===================================================================

// Cek jika ada aksi DELETE
if (isset($_GET['action']) && $_GET['action'] == 'delete' && isset($_GET['id'])) {
    $id_to_delete = $_GET['id'];
    $stmt = $main_conn->prepare("DELETE FROM destinations WHERE id = ?");
    $stmt->bind_param("i", $id_to_delete);
    if ($stmt->execute()) {
        $pesan_notifikasi = '<div class="alert alert-success">Destinasi berhasil dihapus.</div>';
    } else {
        $pesan_notifikasi = '<div class="alert alert-danger">Gagal menghapus destinasi.</div>';
    }
    $stmt->close();
}

// Cek jika ada data UPDATE yang dikirim dari form edit
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['update_destination'])) {
    $id_to_update = $_POST['id'];
    $name = $_POST['name'];
    $location = $_POST['location'];
    $price = $_POST['price'];
    $description = $_POST['description'];
    
    $stmt = $main_conn->prepare("UPDATE destinations SET name = ?, location = ?, price = ?, description = ? WHERE id = ?");
    $stmt->bind_param("ssisi", $name, $location, $price, $description, $id_to_update);
    
    if ($stmt->execute()) {
        $pesan_notifikasi = '<div class="alert alert-success">Destinasi berhasil diperbarui.</div>';
    } else {
        $pesan_notifikasi = '<div class="alert alert-danger">Gagal memperbarui destinasi.</div>';
    }
    $stmt->close();
}


